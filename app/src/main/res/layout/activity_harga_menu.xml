<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_harga_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.example.fikid.itschilliv3.HargaMenu">

    <RelativeLayout
        android:id="@+id/cuy"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/txtvTgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20-09-2017"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"

            android:drawableLeft="@drawable/ic_menu_camera" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 10.000"
            android:id="@+id/txtvHarga"
            android:textColor="@color/tema"
            android:gravity="center"
            android:layout_below="@id/txtvTgl"
            android:textSize="50sp"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Lokasi"
            android:textSize="20sp"
            android:background="@null"
            android:id="@+id/btnLok"
            android:drawableLeft="@drawable/ic_menu_gallery"
            android:layout_below="@+id/txtvHarga"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:id="@+id/itemCabai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cuy"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
